# Tmux
if command -v tmux >/dev/null
 then
     alias ta='tmux attach -t ' 
 fi

# Eza
if command -v eza >/dev/null
 then
     alias ls=eza
     alias ll='eza -lg --icons="always" --git'
     alias tree='eza -T'
     alias la='eza -a'
 fi

# bat
if command -v bat >/dev/null
 then
    alias cat=bat
 fi

# Git
alias g=git
alias gaa="git add -A"
alias gcmsg="git commit -m"
alias gd="git diff"
alias gdc="git diff --cached"
alias gp="git push"
alias gs="git status"
alias gsc="git status --show-stash"
alias gl="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all"
alias gf="git fetch --all"

# Wezterm
alias title="wezterm cli set-tab-title"
